{
    "name": "php-di/zend-framework-bridge",
    "type": "library",
    "description": "Integrates PHP-DI to Zend Framework",
    "homepage": "https://github.com/PHP-DI/Zend-Framework-Bridge",
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "php-di/php-di": "~5.0",
        "acclimate/container": "~1.0",
        "doctrine/annotations": "~1.0",
        "doctrine/cache": "~1.0"
    },

    "require-dev": {
        "zendframework/zendframework": "~2.5",
        "squizlabs/php_codesniffer": "~2.0",
        "phpmd/phpmd" : "~2.0",
        "phpunit/phpunit": "~4.8"
    },

    "autoload": {
        "psr-4": {
            "DI\\ZendFramework\\": "src/DI/ZendFramework/"
        }
    },

    "autoload-dev": {
      "psr-4": {
        "Test\\DI\\ZendFramework\\": "tests/"
      }
    }
}
